<!--form-->
<br /><br /><br />
<div style="margin-left: 75px;">
    <div class="contant">
        <div class="row1">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Login to your account</h2>
                    @using (Html.BeginForm("Login", "Client", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null)
                        <fieldset>
                            @Html.TextBoxFor(x => x.Username, new { @placeholder = "Tên đăng nhập", @value = "" })
                            @Html.PasswordFor(x => x.Password, new { @placeholder = "Mật khẩu" })
                            <button type="submit" class="btn btn-default">Đăng Nhập</button>
                        </fieldset>
                    }
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>New User Signup!</h2>
                    @using (Html.BeginForm("Register", "Client", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null)
                        <fieldset>
                            @Html.ValidationMessageFor(x => x.Username)
                            @Html.ValidationMessageFor(x => x.Password)
                            @Html.ValidationMessageFor(x => x.Phone)
                            @Html.TextBoxFor(x => x.Username, new { @placeholder = "Tên đăng nhập" })
                            @Html.PasswordFor(x => x.Password, new { @placeholder = "Mật khẩu" })
                            @Html.TextBoxFor(x => x.Phone, new { @placeholder = "Số điện thoại" })
                            <button type="submit" class="btn btn-default">Đăng Ký</button>
                        </fieldset>
                    }
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</div>
