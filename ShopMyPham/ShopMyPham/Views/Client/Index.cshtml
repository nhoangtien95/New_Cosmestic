<link href="/Content/Login_theme/css/responsive.css" rel="stylesheet">
<link href="/Content/Login_theme/css/main.css" rel="stylesheet">
<!--form-->
<br /><br /><br />
<div style="margin-left: 75px;">
    <div class="contant">

        <div class="row1">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
            <div class="col-sm-4 col-sm-offset-1">

               
                <div class="login-form">
                    @using (Html.BeginForm("Login", "Client", FormMethod.Post))
                    {
                    <!--login form-->
                        <h2>Login to your account</h2>

                        <fieldset>
                            @Html.TextBoxFor(x => x.Username, new { @placeholder = "Tên đăng nhập", @required = "required" })
                            @Html.PasswordFor(x => x.Password, new { @placeholder = "Mật khẩu", @required = "required" })
                            <button type="submit" class="btn btn-default ">Đăng Nhập</button>
                        </fieldset>
                    }
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    @using (Html.BeginForm("Register", "Client", FormMethod.Post))
                    {                        
                        <h2>New User Signup!</h2>

                        <fieldset>                            
                            @Html.TextBoxFor(x => x.Username, new { @placeholder = "Tên đăng nhập", @required = "required" })
                            @Html.PasswordFor(x => x.Password, new { @placeholder = "Mật khẩu", @required = "required" })
                            @Html.TextBoxFor(x => x.Phone, new { @placeholder = "Số điện thoại", @required = "required" })
                            <button type="submit" class="btn btn-default">Đăng Ký</button>
                        </fieldset>
                    }
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</div>
