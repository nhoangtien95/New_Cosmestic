}

<style>
    #shopMap{
        width:100%;
        height:60%;
    }
</style>
<script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCQxcAtpqnD-hAXgpHFVXcyJh0WeHElxpk">
</script>

<script>

      // This example displays a marker at the center of Australia.
    // When the user clicks the marker, an info window opens. 10.771938, 106.704387

      function initMap() {
          var uluru = { lat: 10.771938, lng: 106.704387 };
        var map = new google.maps.Map($('#shopMap')[0], {
          zoom: 15,
          center: uluru
        });

        var contentString = 'Shop Mỹ Phẩm';

        var infowindow = new google.maps.InfoWindow({
          content: contentString
        });

        var marker = new google.maps.Marker({
          position: uluru,
          map: map,
          title: 'Địa chỉ'
        });
        marker.addListener('click', function() {
          infowindow.open(map, marker);
        });
      }

      google.maps.event.addDomListener(window, 'load', initMap);
</script>

<div class="map" id="shopMap"></div>