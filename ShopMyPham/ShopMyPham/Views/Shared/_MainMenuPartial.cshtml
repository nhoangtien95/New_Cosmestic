@model ShopMyPham.ViewModel.IndexViewModel
@{
    var thuonghieu = ViewBag.ThuongHieu as List<ShopMyPham.Models.ThuongHieu>;
    var son = ViewBag.Son as List<ShopMyPham.Models.Loai>;
    var eye = ViewBag.Eye as List<ShopMyPham.Models.Loai>;
    var face = ViewBag.Face as List<ShopMyPham.Models.Loai>;
    var nail = ViewBag.Nails as List<ShopMyPham.Models.Loai>;
    var tool = ViewBag.Tool as List<ShopMyPham.Models.Loai>;
    var skin = ViewBag.Skin as List<ShopMyPham.Models.Loai>;
}

<style>
</style>

<!-- mainmenu-area start -->
<div class="mainmenu-area" >
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12" style="width: 1343px">
                <div class="mainmenu">
                    <nav>
                        <ul>
                            <li>
                              @Html.ActionLink("Trang Chủ", "Index", "Home")
                            </li>

                            <li>
                                <a href="@Url.Action("allBrand","Home")">Thương Hiệu<span><i class="fa fa-caret-down"></i></span></a>
                                <div class="mega-menu" >
                                    @foreach (var th in thuonghieu)
                                    {
                                        <span>                                            
                                            @Html.ActionLink(th.TenTH, "BrandCategory", "Category", new { id = th.ID }, new { @class = "mega-menu-title", @style = "text-align:center" })
                                            @Html.Raw(@Html.ActionLink("[replacetext]", "BrandCategory", "Category", new { id = th.ID }, null).ToHtmlString().Replace("[replacetext]",
                                       "<img style=\"display:block; margin:0 auto; max-height:75px; max-width:75px; height:75px; width:75px\" src =\"/Photos/ThuongHieu/" + @th.HinhTH + "\" />"))
                                        </span>
                                    }
                                </div>
                            </li>

                            <li>
                                @foreach (var item in son)
                                {
                                    @Html.ActionLink(item.Ten,"MenuCategory", "Category", new { id = item.ID },null)

                                    <div class="mega-menu" style="width:300px;" >
                                        <span style="width:200px;">
                                            @Html.Action("_ChildrenMenuPartial", "Home", new { ParentID = @item.ID })
                                        </span>

                                    </div>
                                }
                            </li>

                            <li>
                                @foreach (var item in eye)
                                {
                                    @Html.ActionLink(item.Ten, "MenuCategory", "Category", new { id = item.ID }, null)

                                    <div class="mega-menu" style="width:300px;">
                                        <span style="width:200px;">
                                            @Html.Action("_ChildrenMenuPartial", "Home", new { ParentID = @item.ID })
                                        </span>

                                    </div>
                                }
                            </li>

                            <li>
                                @foreach (var item in face)
                                {
                                    @Html.ActionLink(item.Ten, "MenuCategory", "Category", new { id = item.ID }, null)

                                    <div class="mega-menu" style="width:300px;">
                                        <span style="width:200px;">
                                            @Html.Action("_ChildrenMenuPartial", "Home", new { ParentID = @item.ID })
                                        </span>

                                    </div>
                                }
                            </li>

                            <li>
                                @foreach (var item in skin)
                                {
                                    @Html.ActionLink(item.Ten, "MenuCategory", "Category", new { id = item.ID }, null)

                                    <div class="mega-menu" style="width:300px;" >
                                        <span style="width:200px;">
                                            @Html.Action("_ChildrenMenuPartial", "Home", new { ParentID = @item.ID })
                                        </span>

                                    </div>
                                }
                            </li>

                            <li>
                                @foreach (var item in nail)
                                {
                                    <a href="@Url.Action("BrandCategory", "Category", new { id = item.ID })">@item.Ten<span></span></a>                                    
                                }
                            </li>

                            <li>
                                @foreach (var item in tool)
                                {
                                    @Html.ActionLink(item.Ten, "MenuCategory", "Category", new { id = item.ID }, null)

                                    <div class="mega-menu" style="width:300px;" >
                                        <span style="width:200px;">
                                            @Html.Action("_ChildrenMenuPartial", "Home", new { ParentID = @item.ID })
                                        </span>

                                    </div>
                                }
                            </li>
                            <li>
                                @Html.ActionLink("Liên Hệ", "Contact", "Home")
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- mainmenu-area end -->
