
@{
    ViewBag.Title = "ListLoai";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var list = (List<ShopMyPham.Models.Loai>)Model;
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Khách Hàng</h3>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Danh Sách</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <button type="button" class="btn btn-success" style="ruby-align:right"><i class="fa fa-plus"></i> Thêm</button>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <table id="datatable-buttons" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên</th>
                                    <th>ID Chủng Loại</th>                                    
                                    <th>SEO</th>
                                    <th>Thao Tác</th>                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ShopMyPham.Models.Loai loai in list)
                                {
                                    <tr>
                                        <td>@loai.ID</td>
                                        <td>@loai.Ten</td>
                                        <td>@loai.ChungLoaiID</td>
                                        <td>@loai.SEO</td>
                                        <td>
                                            <a href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true" style="margin-left:10px;border-radius: 50%;border:1px solid #5A738E;padding:5px 5px;"></span></a>
                                            <a href="#"><span class="glyphicon glyphicon-remove" aria-hidden="true" style="margin-left:10px;border-radius: 50%;border:1px solid #5A738E;padding:5px 5px;"></span></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

