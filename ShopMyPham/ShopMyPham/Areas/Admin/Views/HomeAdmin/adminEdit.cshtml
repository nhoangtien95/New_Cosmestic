@model ShopMyPham.Areas.Admin.Models.AdminEditModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var user = Session["user"] as ShopMyPham.Models.QuanTri;

}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Cá Nhân</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Thông Tin <small>Quản Lý</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
                            <div class="profile_img">
                                <div id="crop-avatar">
                                    <!-- Current avatar -->
                                    <img class="img-responsive avatar-view" src="~/Areas/Admin/Assets/img/avatar.jpg" alt="Avatar" title="Change the avatar">
                                </div>
                            </div>
                            <h3>@user.Username</h3>

                           
                            <br />

                        </div>
                        <div class="col-md-9 col-sm-9 col-xs-12">

                            <div class="profile_title">
                                <div class="col-md-6">
                                    <h2>@user.Ten</h2>
                                </div>
                            </div>
                            @using (Html.BeginForm("adminEdit", "HomeAdmin", FormMethod.Post))
                            {

                                <table width="50%">
                                    <tbody>
                                        <tr>
                                            <td>ID:</td>
                                            <td>@Html.TextBoxFor(x => x.id, new { @Value = user.ID, @readonly = "readonly" })</td>
                                        </tr>
                                        <tr>
                                            <td>Chức Vụ:</td>
                                            <td>Quản Lý</td>
                                        </tr>
                                        <tr>
                                            <td>Địa Chỉ:</td>
                                            <td>@Html.TextBoxFor(x => x.DiaChi, new { @Value = user.DiaChi })</td>
                                        </tr>
                                        <tr>
                                            <td>Số Điện Thoại:</td>
                                            <td>@Html.TextBoxFor(x => x.Sdt, new { @Value = user.Sdt })</td>
                                        </tr>
                                        <tr>
                                            <td>Email:</td>
                                            <td>@Html.TextBoxFor(x => x.Email, new { @Value = user.Email })</td>
                                        </tr>
                                    </tbody>                                    
                                </table>
                                <input type="submit" class="btn btn-default" value="Xác nhận" />
                            }

                            <!-- start of user-activity-graph -->
                            <div id="graph_bar" style="width:100%; height:280px;"></div>
                            <!-- end of user-activity-graph -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
